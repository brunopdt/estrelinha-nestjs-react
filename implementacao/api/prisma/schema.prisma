datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Aluno {
  cpf           String      @id @unique
  rg            String      @unique
  nome          String
  email         String
  endereco      String
  nomeUsuario   String      @unique
  contaId       Int         @unique
  instituicaoId Int
  cursoId       Int
  usuario       Usuario     @relation(fields: [nomeUsuario], references: [nomeUsuario])
  conta         Conta       @relation(fields: [contaId], references: [id])
  instituicao   Instituicao @relation(fields: [instituicaoId], references: [id])
  curso         Curso       @relation(fields: [cursoId], references: [id])
  transacoes    Transacao[]
}

model Empresa {
  cnpj         String     @id @unique
  nomeFantasia String
  nomeUsuario  String     @unique
  usuario      Usuario    @relation(fields: [nomeUsuario], references: [nomeUsuario])
  vantagens    Vantagem[]
}

model Usuario {
  nomeUsuario String     @id @unique
  senha       String
  Aluno       Aluno?
  Empresa     Empresa?
  Professor   Professor?
}

model Professor {
  nome          String
  cpf           String      @id @unique
  departamento  String
  endereco      String
  nomeUsuario   String      @unique
  instituicaoId Int
  contaId       Int         @unique
  usuario       Usuario     @relation(fields: [nomeUsuario], references: [nomeUsuario])
  instituicao   Instituicao @relation(fields: [instituicaoId], references: [id])
  conta         Conta       @relation(fields: [contaId], references: [id])
}

model Instituicao {
  id          Int         @id @default(autoincrement())
  professores Professor[]
  cursos      Curso[]
  alunos      Aluno[]
}

model Curso {
  id            Int         @id @default(autoincrement())
  nome          String
  instituicao   Instituicao @relation(fields: [instituicaoId], references: [id])
  instituicaoId Int
  alunos        Aluno[]
}

model Vantagem {
  id          Int         @id @default(autoincrement())
  nome        String
  valor       Int
  fotoKey     String
  empresa     Empresa     @relation(fields: [empresaCnpj], references: [cnpj])
  empresaCnpj String
  transacao   Transacao[]
}

model Transacao {
  id         Int      @id @default(autoincrement())
  alunoCpf   String
  valor      Int
  data       DateTime @default(now())
  vantagemId Int
  aluno      Aluno    @relation(fields: [alunoCpf], references: [cpf])
  vantagem   Vantagem @relation(fields: [vantagemId], references: [id])
  Conta      Conta?   @relation(fields: [contaId], references: [id])
  contaId    Int?
}

model Conta {
  id         Int         @id @default(autoincrement())
  saldo      Int         @default(0)
  transacoes Transacao[]
  professor  Professor?
  aluno      Aluno?
}
